<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" media="screen" href="/css/master.css"/>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  </head>
  <body>
    <header class="menu">
      <nav>
        <ul>
          <li><a href="{{ path('app_dashboard_homepage') }}">Dashboard</a></li>
          <li><a href="{{ path('course') }}">Course</a></li>
        </ul>
        <ul class="user">
          {% if app.user %}
            <li><a href="{{ path('fos_user_profile_edit') }}">Edit Profile</a></li>
            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
          {% else %}
            <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
            <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
          {% endif %}
        </ul>
      </nav>
    </header>

    {% block body %}{% endblock %}

    <footer></footer>

    {% block javascripts %}    
      <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
      <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
      <script type="text/javascript" data-main="{{ asset('js/config')}}" src="/vendor/requirejs/require.js"></script>
    {% endblock %}

  </body>
</html>
