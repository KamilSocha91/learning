{% extends "::base.html.twig" %}

{% form_theme form '@AppDashboard/Forms/regular.html.twig' %}

{% block header_title %}
    <h2>{{ 'Profile'|trans }}</h2>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{{ 'profile.edit.text'|trans }}</h5>
                </div>
                <div class="ibox-content">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_rest(form) }}
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white" type="submit">{{ 'button.cancel'|trans({}, 'interface') }}</button>
                            <button class="btn btn-primary" type="submit">{{ 'button.save'|trans({}, 'interface') }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}